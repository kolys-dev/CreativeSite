@model IEnumerable<CreativeSite.Models.Chapter> 
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<link href="~/Content/Chapters.css" rel="stylesheet">
<script src="~/Scripts/chapters-menu.js"></script>
<nav id="chapters-navigation">

    <ul id="chapters">
        @foreach (var item in Model)
        {
            <li id="item">
                <div>@Html.DisplayFor(modelItem => item.Id)</div>
                <div>@Html.DisplayFor(modelItem => item.Title)</div>
            </li>
        }
    </ul>
</nav>

<style>
    .panel-collapse {
        background-color: rgb(178, 0, 255);
    }

</style>

<p>
    @Html.ActionLink("Create New", "Create", routeValues: new { id = ViewBag.CreativeId})
</p>

<div class="panel-group" id="accordion">
    @{ int index = 1;}
    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#@index">@item.Title</a>
                </h4>
            </div>
            <div id="@index" class="panel-collapse collapse in">
                <div class="panel-body">
                    @item.Content
                </div>
            </div>
        </div>
        index++;
    }
</div>
